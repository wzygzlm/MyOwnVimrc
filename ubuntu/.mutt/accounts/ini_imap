# 设置发信地址和用户名
set from = "minliu@ini.uzh.ch"
set realname = "Min Liu"
set use_from = yes

# 设置ini帐户和密码
set imap_user = "minliu"

# encrypted imap password
source '~/.decryptPwd.sh ini|'

# 设置远程服务器文件夹
set folder = "imaps://imap.ini.uzh.ch:993"
set spoolfile = "+INBOX"
set postponed = "+Drafts"
set record = "+Sent"
set trash = "+Trash"

# 设置P来自动更新邮件
bind index P imap-fetch-mail
